@model IEnumerable<EmployeeViewModel>
@{
	ViewData["Title"] = "All Employees";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">Employees List</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form class="d-flex" asp-action="Index" asp-controller="Employee">
                <input name="searchString" class="form-control me-1" type="search" placeholder="Search by Firstname, Lastname & PhoneNumber" aria-label="Search" value="@ViewData["CurrentFilter"]">
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </form>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-outline-primary">Employee List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">EmpId</th>
                        <th scope="col"><a class="text-dark" asp-controller="Employee" asp-action="Index" asp-route-sortOrder="name_desc">FirstName</a></th>
                        <th scope="col">LastName</th>
                        <th scope="col">DateOfBirth</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Email</th>
                        <th scope="col">PhoneNumber</th>
                        <th scope="col">Address</th>
                        <th scope="col">DepId</th>
                        
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   
                    @foreach(var employee in Model){    
                        <tr>

                            <th scope="row">@employee.EmployeeId</th>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.DateOfBirth</td>
                            <td>@employee.Gender</td>
                            <td>@employee.Email</td>
                            <td>@employee.PhoneNumber</td>
                            <td>@employee.Address</td>
                            <td>@employee.DepartmentId</td>
                            <td><a class="btn btn-dark" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a></td>
                            <td><a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeId" onclick="return confirm('Click on OK to delete')">Delete</a></td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
